
  <div class="post-item">

    <div class="post-name">
      <%= link_to favorite.user.name, user_path(favorite.user) %>
    </div>
  
    <div class="post-content">
      <%= favorite.content %>
    </div>

    <div class="post-time">
      <%= favorite.created_at.to_s(:datetime_jp) %>
    </div>

    <div class="post-favorites-<%= favorite.id %>">
      <%= render 'favorites/btn', post: favorite %>
    </div>

    <% if current_user == favorite.user %>
      <%= link_to "削除", favorite, method: :delete, data: { confirm: "この投稿を削除しますか？" }, class: 'post-delete' %>
    <% end %>
  </div>