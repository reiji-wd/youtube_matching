<h1>新規登録</h1>

<%= form_with(model: @user, local: true) do |f| %>

  <%= f.label :name, 'ユーザ名' %>
  <%= f.text_field :name %>

  <%= f.label :email, 'メールアドレス' %>
  <%= f.email_field :email %>

  <%= f.label :password, 'パスワード' %>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation, 'パスワード確認' %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit '新規登録' %>

<% end %>