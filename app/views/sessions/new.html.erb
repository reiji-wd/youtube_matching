<div class="toppage-form">
  <h1>ログイン</h1>
  <div class="toppage-form-main">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="toppage-form-main-item">
        <div>
          <%= f.label :email, 'メールアドレス' %>
        </div>
        <div>
          <%= f.email_field :email %>
        </div>
      </div>
      
      <div class="toppage-form-main-item">
        <div>
          <%= f.label :password, 'パスワード' %>
        </div>
        <div>
          <%= f.password_field :password %>
        </div>
      </div>

      <%= f.submit 'ログイン', class: "toppage-form-main-item-login" %>

    <% end %>
    <div class="toppage-form-main-path">
      <%= link_to '新規登録はコチラ', signup_path %>
    </div>
  </div>
</div>
