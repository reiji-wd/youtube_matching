<% if logged_in? %>

<div class="post-form">
  <div class="post-form-main">

    <%# <textarea class="post-text"></textarea>
    <input class="post-image" type="file" name="image">
    <button class="post-btn">投稿</button> %>
    <%= form_with(model: current_user.posts.build)  do |f| %>
      <%= f.text_area :content, class:"post-text" %>
      <%= f.file_field :image %>
      <%= f.submit "投稿", class: "post-btn" %>
    <% end %>

  </div>

  <div class="post-form-btn">
    <i class="fas fa-angle-double-down"></i>
  </div>

</div>

<div class="posts">
  <%= render @posts %>
</div>

<% else %>
  <%= link_to '新規登録', signup_path %>
<% end%>

<%= javascript_pack_tag 'post-form' %>
